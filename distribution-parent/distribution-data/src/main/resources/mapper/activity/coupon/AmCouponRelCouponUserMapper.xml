<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chauncy.data.mapper.activity.coupon.AmCouponRelCouponUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.chauncy.data.domain.po.activity.coupon.AmCouponRelCouponUserPo">
        <id column="id" property="id" />
        <result column="create_by" property="createBy" />
        <result column="receive_time" property="receiveTime" />
        <result column="coupon_id" property="couponId" />
        <result column="user_id" property="userId" />
        <result column="use_status" property="useStatus" />
        <result column="receive_num" property="receiveNum" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, create_by, create_time, coupon_id, user_id, use_status, receive_num
    </sql>
    <select id="receiveCouponCenter" resultType="com.chauncy.data.vo.app.advice.coupon.SearchReceiveCouponVo">
        select a.id as coupon_id,name,type,discount,discount_full_money,reduction_full_money,reduction_post_money,total_num,stock
        from am_coupon a,pm_member_level b
        where a.del_flag = 0 and a.del_flag = 0 and a.level_id = b.id and b.level &lt;= #{level}
    </select>

</mapper>
