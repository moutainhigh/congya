        <if test="value != null and value != 0">value,</if>
        <if test="createBy != null and createBy != ''">create_by,</if>
        <if test="createTime != null and createTime != ''">create_time,</if>
        <if test="updateBy != null and updateBy != ''">update_by,</if>
        <if test="updateTime != null and updateTime != ''">update_time,</if>
        <if test="delFlag != null and delFlag != ''">del_flag</if>
        )values(
        <!--<if test="id != null and id != 0">#{id},</if>-->
        <if test="productAttributeId != null and productAttributeId != ''">#{productAttributeId},</if>
        <if test="value != null and value != 0">#{value},</if>
        <if test="createBy != null and createBy != ''">#{createBy}</if>
        <if test="createTime != null and createTime != ''">#{createTime}</if>
        <if test="updateBy != null and updateBy != ''">#{updateBy}</if>
        <if test="updateTime != null and updateTime != ''">#{updateTime}</if>
        <if test="delFlag != null and delFlag != ''">#{delFlag}</if>

    </insert>

    <delete id="deleteByAttributeId">
        delete
        from pm_goods_attribute_value
        <where>
            <if test="productAttributeId !=null and productAttributeId !=''">
                and product_attribute_id = #{productAttributeId}
            </if>
        </where>
    </delete>

    <select id="findByAttributeId" resultType="com.chauncy.data.domain.po.product.PmGoodsAttributeValuePo">
        select *
        from pm_goods_attribute_value
        where product_attribute_id = #{productAttributeId}
    </select>

