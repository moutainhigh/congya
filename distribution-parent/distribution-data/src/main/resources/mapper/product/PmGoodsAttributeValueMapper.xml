<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chauncy.data.mapper.product.PmGoodsAttributeValueMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.chauncy.data.domain.po.product.PmGoodsAttributeValuePo">
        <id column="id" property="id" />
        <result column="product_attribute_id" property="productAttributeId" />
        <result column="value" property="value" />
        <result column="listing_date" property="listingDate" />
        <result column="create_by" property="createBy" />
        <result column="create_time" property="createTime" />
        <result column="update_by" property="updateBy" />
        <result column="update_time" property="updateTime" />
        <result column="del_flag" property="delFlag" />
    </resultMap>

    <delete id="deleteByAttributeId">
        delete
        from pm_goods_attribute_value
        <where>
            <if test="productAttributeId !=null and productAttributeId !=''">
                and product_attribute_id = #{productAttributeId}
            </if>
        </where>
    </delete>
    <select id="findByAttributeId" resultType="java.lang.Long">
        select id
        from pm_goods_attribute_value
        where product_attribute_id = #{productAttributeId}
    </select>

</mapper>
