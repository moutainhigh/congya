    <select id="searchPaging" resultType="com.chauncy.data.vo.manage.message.information.comment.InformationCommentVo">
        select mic.id, mic.user_id, mic.parent_user_id, mic.create_time, mic.enabled, mic.content, IFNULL(uu.name,su.username) as userName,
        IFNULL(uu.name,su.avatar) as avatar, IFNULL(puu.name,psu.username) as parentUserName
        from mm_information_comment mic
        left join um_user uu on mic.user_id = uu.id
        left join sys_user su on mic.user_id = su.id
        left join um_user puu on mic.parent_user_id = puu.id
        left join sys_user psu on mic.parent_user_id = psu.id
        where mic.info_id = #{id} and mic.del_flag = 0
        order by mic.create_time asc
    </select>
